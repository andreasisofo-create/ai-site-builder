# ===========================================
# Site Builder - Backend Environment Variables
# ===========================================

# App Configuration
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars

# CORS (Separa con virgole, NO spazi)
# Esempio: CORS_ORIGINS=["https://tuosito.vercel.app","http://localhost:3000"]
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Database (PostgreSQL)
# Formato: postgresql://user:password@host:port/database
# Per Supabase: postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
DATABASE_URL=postgresql://user:password@localhost:5432/sitebuilder

# Redis (Upstash)
# Formato: rediss://default:password@host:port
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Configuration (Kimi)
KIMI_API_KEY=your-kimi-api-key-here
KIMI_API_URL=https://api.moonshot.cn/v1
KIMI_MODEL=kimi-k2.5

# AI Configuration (OpenRouter - fallback opzionale)
OPENROUTER_API_KEY=
OPENROUTER_API_URL=https://openrouter.ai/api/v1

# Admin Configuration
# Comma-separated list of emails that get auto-premium on login
ADMIN_EMAILS=
# Admin panel credentials
ADMIN_USERNAME=E-quipe
ADMIN_PASSWORD=change-this-in-production

# Google OAuth (per autenticazione Google)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (SMTP - opzionale)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com

# File Storage (Cloudflare R2 - opzionale)
R2_ENDPOINT=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=

# Web3Forms (contact form submissions)
WEB3FORMS_KEY=

# Vercel Integration (opzionale)
VERCEL_TOKEN=
VERCEL_TEAM_ID=

# ===========================================
# SVILUPPO LOCALE (non usare in produzione!)
# ===========================================
# DEBUG=true
# CORS_ALLOW_ALL=true
